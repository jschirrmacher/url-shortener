{
  "name": "url-shortener",
  "version": "1.0.0",
  "description": "URL-Shortener mit Analytics und CSV-Speicher (Nuxt3 TypeScript)",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "nuxt build",
    "dev": "nuxt dev",
    "generate": "nuxt generate",
    "preview": "nuxt preview",
    "postinstall": "nuxt prepare",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "format:staged": "prettier --write",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "typecheck": "vue-tsc --noEmit",
    "typecheck:watch": "vue-tsc --noEmit --watch",
    "check": "npm run format:check && npm run lint && npm run typecheck && npm run test:run",
    "prepare": "husky",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@nuxtjs/tailwindcss": "^6.12.1",
    "csv-parser": "^3.0.0",
    "csv-writer": "^1.6.0",
    "jsonwebtoken": "9.0.2",
    "nanoid": "^5.0.0"
  },
  "devDependencies": {
    "@nuxt/devtools": "latest",
    "@nuxt/eslint-config": "1.7.1",
    "@prettier/plugin-xml": "3.4.2",
    "@types/jsonwebtoken": "9.0.10",
    "@typescript-eslint/eslint-plugin": "8.38.0",
    "@typescript-eslint/parser": "8.38.0",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "9.32.0",
    "husky": "9.1.7",
    "lint-staged": "16.1.2",
    "nuxt": "^3.13.2",
    "prettier": "3.6.2",
    "tailwindcss": "^3.4.10",
    "typescript": "^5.6.3",
    "vitest": "^3.2.4",
    "vue-tsc": "3.0.5"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "lint-staged": {
    "*.{js,ts,vue}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ],
    "*.{ts,vue}": [
      "vue-tsc --noEmit"
    ]
  }
}
