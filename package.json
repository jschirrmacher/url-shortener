{
  "name": "url-shortener",
  "version": "1.0.0",
  "description": "URL-Shortener mit Analytics und CSV-Speicher (Nuxt3 TypeScript)",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "nuxt build",
    "dev": "nuxt dev",
    "generate": "nuxt generate",
    "preview": "nuxt preview",
    "postinstall": "nuxt prepare",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "typecheck": "vue-tsc --noEmit",
    "typecheck:watch": "vue-tsc --noEmit --watch",
    "prepare": "husky",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "setup-admin": "tsx ./scripts/setupAdmin.js",
    "generate-demo-data": "tsx ./scripts/generateDemoData.ts",
    "update": "npx -y npm-check-updates -du",
    "setup": "npm install && allow-scripts",
    "setup:ci": "npm ci && allow-scripts"
  },
  "dependencies": {
    "@pinia/nuxt": "0.11.3",
    "@types/qrcode": "1.5.6",
    "csv-parser": "^3.2.0",
    "csv-writer": "^1.6.0",
    "jsonwebtoken": "9.0.3",
    "pinia": "3.0.4",
    "qrcode": "1.5.4"
  },
  "devDependencies": {
    "@lavamoat/allow-scripts": "3.4.1",
    "@nuxt/devtools": "latest",
    "@nuxt/eslint": "1.12.1",
    "@nuxt/eslint-config": "1.12.1",
    "@nuxt/test-utils": "3.23.0",
    "@prettier/plugin-xml": "3.4.2",
    "@types/jsonwebtoken": "9.0.10",
    "@typescript-eslint/eslint-plugin": "8.53.0",
    "@typescript-eslint/parser": "8.53.0",
    "@vitejs/plugin-vue": "6.0.3",
    "@vitest/coverage-v8": "^3.2.4",
    "@vue/test-utils": "2.4.6",
    "eslint": "9.39.2",
    "eslint-plugin-vue": "10.6.2",
    "happy-dom": "20.3.0",
    "husky": "9.1.7",
    "lint-staged": "16.2.7",
    "nuxt": "^4.2.2",
    "prettier": "3.8.0",
    "typescript": "^5.9.3",
    "vue-tsc": "3.2.2"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "lint-staged": {
    "*.{js,ts,vue}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ],
    "*.{ts,vue}": [
      "vue-tsc --noEmit"
    ]
  },
  "lavamoat": {
    "allowScripts": {
      "$root$": true,
      "@nuxt/eslint-config>eslint-plugin-import-x>unrs-resolver": true,
      "@nuxt/eslint>@eslint/config-inspector>esbuild": true,
      "nuxt>@parcel/watcher": true,
      "nuxt>esbuild": true,
      "nuxt>@nuxt/vite-builder>esbuild": true
    }
  }
}
